<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CFApp.MarcarConsulta">
    <ContentPage.Content>
        
        
        <StackLayout>
            <Picker  x:Name="pckPosto" HorizontalOptions="FillAndExpand" Title="Selecione a Unidade Basica">
                <Picker.Items>
                    <x:String>UBS 26 de Agosto</x:String>
                    <x:String>UBS Coronel Antonino</x:String>
                    <x:String>UBS Nova Bahia</x:String>
                    <x:String>UBS Vila Carvalho</x:String>
                </Picker.Items>
                   </Picker>
            
            <Picker  x:Name="TipodeConsulta" HorizontalOptions="FillAndExpand" Title="Selecione o Tipo de Consulta"  >
                <Picker.Items  >
                    <x:String>Clinico Geral</x:String>
                    <x:String>Pediatra</x:String>
                    <x:String>Ginecologista</x:String>
                    <x:String>Odontolista</x:String>
                </Picker.Items>
            </Picker>

            <DatePicker ></DatePicker>
                    <TimePicker />
            
            <Button   Text="Marcar" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>